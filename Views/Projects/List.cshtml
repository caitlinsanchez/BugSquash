
@model System.Collections.Generic.List<BugSquash.Models.Project>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Projects</h2>

<table id="projects" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayName("Project")</th>
            <th>@Html.DisplayName("Description")</th>          
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {
           var table = $("#projects").DataTable({

                ajax: {
                    url: "/api/projects",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, project) {
                            return "<a href='/project/edit/" + project.id + "'>" + project.name + "</a>";
                        }
                    },
                    {
                        data: "description"

                    },                    
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-project-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            $("#projects").on("click", ".js-delete", function () {
                var button = $(this);
                    if (confirm("Are you sure you want to delete this project?")) {
                        $.ajax({
                            url: "/api/projects/" + button.attr("data-project-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
    </script>
}
